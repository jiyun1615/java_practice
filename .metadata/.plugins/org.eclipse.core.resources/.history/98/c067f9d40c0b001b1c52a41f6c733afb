package report4;
import java.util.Scanner;

import java.util.Scanner;

public class Person{
	String name;
	String birth;
	String state;
	
	public Person()
	{
	}
	public Person(String n)
	{
		name = n;
	}
	public Person(String n, String b)
	{
		name = n;
		birth = b;
	}
	public Person(String n, String b, String s)
	{
		name = n;
		birth = b;
		state = s;
	}
	Scanner scan = new Scanner(System.in);
	public String nameIn()
	{
		System.out.print("입력1(이름) = ");
		String n;
		n = scan.nextLine();
		return n;
	}
	public String birthIn()
	{
		System.out.print("입력2(생년월일) = ");
		String b;
		b = scan.nextLine();
		return b;
	}
	public String stateIn()
	{
		System.out.print("입력3(출생지) = ");
		String s;
		s = scan.nextLine();
		return s;
	}
}


public class report4{
	public void main(String args[])
	{
		Scanner scan = new Scanner(System.in);
		System.out.print("입력 항목은 몇 개 입니까? ");
		int num = scan.nextInt();
		String n1;
		String b1;
		String s1;
		Person p = new Person();
		
		switch (num) {
		case 1:
			n1 = p.nameIn();
			Person obj = new Person(n1);
			break;
		case 2:
			n1 = p.nameIn();
			b1 = p.birthIn();
			Person obj1 = new Person(n1, b1);
			break;
		case 3:
			n1 = p.nameIn();
			b1 = p.birthIn();
			s1 = p.stateIn();
			Person obj2 = new Person(n1, b1, s1);
			break;
		default:
			System.out.print("Error");
			break;
		}
	}
}
